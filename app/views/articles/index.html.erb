<div class = "page-hearder panel panel-default">
	<h1>All Articles Here <span class = "badge"> <%= @articles_count %></span></h1>
</div>

<ul id = "articles" class = "list-unstyled "list-group"">
	<% @articles.each do |article| %>
	<li><%= link_to article.title, article_path(article),
			class: "" %></li>
	<% end %>
	<%= link_to "Add a New Article", new_article_path, 
		class: "btn btn-info btn-lg" %>
</ul>
